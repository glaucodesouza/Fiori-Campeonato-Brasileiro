<mvc:View 
    controllerName="brasileirao.controller.Main"
    xmlns:c="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <ObjectHeader id="_IDGenObjectHeader1" 
            title="{ModeloDadosGerais>/campeonato}"
            number="{ModeloDadosGerais>/rodada}"
            numberUnit="Rodada">
        </ObjectHeader>
        <IconTabBar id="_IDGenIconTabBar1" >
            <items>
                <IconTabFilter id="_IDGenIconTabFilter1" 
                    text="Classificação" 
                    key="classificacao"
                    icon="sap-icon://competitor">
                    <!-- tabela -->
                    <Table id="_IDGenTable1" items="{ModeloClassificacao>/Classificacao}">
                        <columns>
                            <Column id="_IDGenColumn1" >
                                <Text id="_IDGenText1" text="Posição"></Text>
                            </Column>
                            <Column id="_IDGenColumn2" >
                                <Text id="_IDGenText2" text=""></Text>
                            </Column>
                            <Column id="_IDGenColumn3" >
                                <Text id="_IDGenText3" text="Time"></Text>
                            </Column>
                            <Column id="_IDGenColumn4" >
                                <Text id="_IDGenText4" text="Pt"></Text>
                            </Column>
                            <Column id="_IDGenColumn5" >
                                <Text id="_IDGenText5" text="V"></Text>
                            </Column>
                            <Column id="_IDGenColumn6" >
                                <Text id="_IDGenText6" text="E"></Text>
                            </Column>
                            <Column id="_IDGenColumn7" >
                                <Text id="_IDGenText7" text="D"></Text>
                            </Column>
                            <Column id="_IDGenColumn8" >
                                <Text id="_IDGenText8" text="GM"></Text>
                            </Column>
                            <Column id="_IDGenColumn9" >
                                <Text id="_IDGenText9" text="GC"></Text>
                            </Column>
                            <Column id="_IDGenColumn10" >
                                <Text id="_IDGenText10" text="SG"></Text>
                            </Column>
                        </columns>

                        <items>
                            <ColumnListItem id="_IDGenColumnListItem1" >
                                <cells>
                                    <Text id="_IDGenText11" text="{ModeloClassificacao>posicao}"></Text>
                                    <Image id="_IDGenImage1" src="{ModeloClassificacao>time/escudo}" width="50%"></Image>
                                    <Text id="_IDGenText12" text="{ModeloClassificacao>time/nome_popular}"></Text>
                                    <Text id="_IDGenText13" text="{ModeloClassificacao>pontos}"></Text>
                                    <Text id="_IDGenText14" text="{ModeloClassificacao>jogos}"></Text>
                                    <Text id="_IDGenText15" text="{ModeloClassificacao>vitorias"></Text>
                                    <Text id="_IDGenText16" text="{ModeloClassificacao>empates}"></Text>
                                    <Text id="_IDGenText17" text="{ModeloClassificacao>derrotas}"></Text>
                                    <Text id="_IDGenText18" text="{ModeloClassificacao>gols_pro}"></Text>
                                    <Text id="_IDGenText19" text="{ModeloClassificacao>gols_contra}"></Text>
                                    <Text id="_IDGenText20" text="{ModeloClassificacao>saldo_gols}"></Text>
                                </cells>
                            </ColumnListItem>
                        </items>

                    </Table>
                </IconTabFilter>

                <IconTabFilter id="_IDGenIconTabFilter2" text="Partidas"
                    icon="sap-icon://soccer"
                    key="partidas">

                    <!-- para funcionar colocar propriedade xmlns:c="sap.ui.core" dentro da tag
                    view-->
                    <!-- ver linha 3-->
                    <c:Fragment fragmentName="brasileirao.view.partidas" type="XML" />

                </IconTabFilter>
            </items>
        </IconTabBar>
    </Page>
</mvc:View>
